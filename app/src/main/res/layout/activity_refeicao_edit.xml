<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.amacedo.com.fitapp.RefeicaoEdit">

    <TextView
        android:id="@+id/txtvwTipoRefEdti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtvwDataRefEdit"
        android:layout_marginTop="18dp" />

    <TextView
        android:id="@+id/txtvwDataRefEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="44dp" />

    <Button
        android:id="@+id/btnNovoAlimento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="137dp"
        android:layout_marginStart="66dp"
        android:layout_toEndOf="@+id/txtvwTipoRefEdti"
        android:text="Adicionar \nAlimento" />

    <Button
        android:id="@+id/btnVerAlimento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnNovoAlimento"
        android:layout_marginEnd="62dp"
        android:text="Ver \n Alimentos" />

</RelativeLayout>
