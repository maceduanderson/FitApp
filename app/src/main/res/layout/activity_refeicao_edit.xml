<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.amacedo.com.fitapp.RefeicaoEdit">

    <TextView
        android:id="@+id/txtvwTipoRefEdti"
        android:layout_width="382dp"
        android:layout_height="48dp"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/txtvwDataRefEdit"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/txtvwDataRefEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="44dp"
        android:layout_toEndOf="@+id/txtvwTipoRefEdti"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnNovoAlimento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="37dp"
        android:text="Adicionar \nAlimento"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp" />

    <TextView
        android:id="@+id/txtvwInfoAlim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtvwTipoRefEdti"
        android:layout_marginTop="33dp"
        android:layout_toEndOf="@+id/txtvwDataRefEdit" />

</RelativeLayout>
